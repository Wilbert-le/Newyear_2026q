<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lunar New Year - Chúc Tết</title>
    <link rel="stylesheet" href="/css/index.css">
</head>
<body>
    <div class="container">
        <!-- Decorative corner patterns -->
        <div class="corner corner-top-left"></div>
        <div class="corner corner-top-right"></div>
        <div class="corner corner-bottom-left"></div>
        <div class="corner corner-bottom-right"></div>

        <!-- Main content wrapper -->
        <div class="main-content">
            <!-- Roof structure -->
            <div class="roof">
                <div class="roof-edge left"></div>
                <div class="roof-tiles"></div>
                <div class="roof-edge right"></div>
            </div>

            <!-- Lanterns -->
            <div class="lantern lantern-left">
                <div class="lantern-string"></div>
                <div class="lantern-body">
                    <div class="lantern-top"></div>
                    <div class="lantern-main"></div>
                    <div class="lantern-decoration"></div>
                    <div class="lantern-bottom"></div>
                </div>
                <div class="lantern-tassel"></div>
            </div>

            <div class="lantern lantern-right">
                <div class="lantern-string"></div>
                <div class="lantern-body">
                    <div class="lantern-top"></div>
                    <div class="lantern-main"></div>
                    <div class="lantern-decoration"></div>
                    <div class="lantern-bottom"></div>
                </div>
                <div class="lantern-tassel"></div>
            </div>

            <!-- Title section -->
            <div class="title-container">
                <h1 class="title">LUNAR<br>NEW YEAR</h1>
            </div>

            <!-- Red envelope (Bao lì xì) -->
            <div class="envelope-wrapper" id="envelopeWrapper">
                <div class="envelope" id="envelope">
                    <div class="envelope-flap"></div>
                    <div class="envelope-body">
                        <div class="envelope-symbol">¥</div>
                    </div>
                </div>
            </div>

            <!-- Clouds decoration -->
            <div class="cloud cloud-left"></div>
            <div class="cloud cloud-right"></div>
        </div>

        <!-- Floating sparkles -->
        <div class="sparkles-container" id="sparklesContainer"></div>
    </div>

    <script src="/js/index.js"></script>
</body>
</html>
